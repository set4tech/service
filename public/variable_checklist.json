{
  "project_identity": {
    "project_name": {
      "description": "Full project name/title",
      "type": "text"
    },
    "project_number": {
      "description": "Project/job number (e.g., 2024-001)",
      "type": "text"
    },
    "address": {
      "description": "Project address",
      "type": "text"
    },
    "client_name": {
      "description": "Owner/client name",
      "type": "text"
    },
    "architect_name": {
      "description": "Architecture firm name",
      "type": "text"
    },
    "authority_having_jurisdiction": {
      "description": "Building department or code authority",
      "type": "text"
    }
  },
  "project_scope": {
    "work_type": {
      "description": "Type of work being performed",
      "type": "select",
      "options": ["New Construction", "Addition", "Alteration", "Tenant Improvement", "Change of Occupancy", "Repair"]
    },
    "project_description": {
      "description": "Brief description of the project scope",
      "type": "text"
    },
    "drawing_date": {
      "description": "Date on the drawings",
      "type": "text"
    }
  },
  "building_characteristics": {
    "building_area": {
      "description": "Total building area in sq ft",
      "type": "number"
    },
    "num_stories": {
      "description": "Number of stories",
      "type": "number"
    },
    "construction_type": {
      "description": "Building construction type",
      "type": "select",
      "options": ["Type I-A", "Type I-B", "Type II-A", "Type II-B", "Type III-A", "Type III-B", "Type IV", "Type V-A", "Type V-B"]
    },
    "occupancy_classification": {
      "description": "IBC occupancy group",
      "type": "select",
      "options": ["A-1", "A-2", "A-3", "A-4", "A-5", "B", "E", "F-1", "F-2", "H-1", "H-2", "H-3", "H-4", "H-5", "I-1", "I-2", "I-3", "I-4", "M", "R-1", "R-2", "R-3", "R-4", "S-1", "S-2", "U"]
    },
    "sprinklers": {
      "description": "Is the building fully sprinklered?",
      "type": "boolean"
    },
    "has_mezzanine": {
      "description": "Does the building have a mezzanine?",
      "type": "boolean"
    },
    "has_parking": {
      "description": "Does the site include parking?",
      "type": "boolean"
    },
    "has_exterior_routes": {
      "description": "Are there accessible exterior routes on site?",
      "type": "boolean"
    }
  },
  "facility_type": {
    "facility_category": {
      "description": "Primary facility category",
      "type": "select",
      "options": ["Title II - State/Local Government", "Title III - Public Accommodation", "Title III - Commercial Facility", "FHA - Multifamily Housing", "Other"]
    },
    "is_public_accommodation": {
      "description": "Is this a public accommodation or commercial facility?",
      "type": "boolean"
    }
  },
  "funding_sources": {
    "has_federal_assistance": {
      "description": "Any federal financial assistance?",
      "type": "boolean"
    }
  },
  "ownership": {
    "owner_type": {
      "description": "Facility owner type",
      "type": "select",
      "options": ["Private", "State/Local Government", "Federal Government", "Non-Profit"]
    }
  }
}
